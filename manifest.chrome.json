{
  "manifest_version": 3,
  "name": "Bluesky Auto-Hide & Feed Memory",
  "version": "1.1",
  "description": "Automatically hides scrolled posts and remembers feed positions for quick navigation",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://bsky.app/*",
    "*://*.bsky.network/*",
    "*://shiitake.us-east.host.bsky.network/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://bsky.app/*",
      "*://*.bsky.network/*",
      "*://shiitake.us-east.host.bsky.network/*"
    ],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/hide48.png",
      "96": "icons/hide96.png",
      "128": "icons/hide128.png"
    }
  }
}
